---
import { Picture } from 'astro:assets';
import { getCollection, getEntry } from 'astro:content';
import BlogPostSummary from '~components/BlogPostSummary.svelte';
import BaseLayout from '~layouts/BaseLayout.astro';

export async function getStaticPaths() {
	const posts = await getCollection('posts');
	return posts.map(
		({
			data: {
				featuredImage,
				featuredImageAlt,
				placeholder,
				postTitle,
				relatedPosts,
				seoMetaDescription,
			},
			render,
			slug,
		}) => {
			return {
				params: { slug },
				props: {
					featuredImage,
					featuredImageAlt,
					placeholder,
					seoMetaDescription,
					render,
					postTitle,
					relatedPosts,
				},
			};
		},
	);
}

const { slug } = Astro.params;
const {
	featuredImage,
	featuredImageAlt,
	seoMetaDescription: metadescription,
	render,
	placeholder,
	postTitle: title,
	relatedPosts,
} = Astro.props;

const { Content } = await render();
const seoProps = {
	metadescription,
	slug,
	title,
};

const relatedPostsArray = relatedPosts
	? await Promise.all(
			relatedPosts?.map(async ({ collection, slug }) => {
				const {
					data: { datePublished, postTitle, seoMetaDescription },
				} = await getEntry(collection, slug);

				return { datePublished, postTitle, seoMetaDescription };
			}),
	  )
	: [];

const { format, width, height } = featuredImage;
---

<BaseLayout {...seoProps}>
	<h1>{title}</h1>
	<div class="image-wrapper">
		<img class="placeholder" aria-hidden="true" src={placeholder} width={width} height={height} />
		<Picture
			pictureAttributes={{ class: 'image lazy' }}
			src={featuredImage}
			alt={featuredImageAlt}
			densities={[1.5, 2]}
			formats={['avif', 'webp']}
			fallbackFormat={format}
			loading="eager"
			fetchpriority="high"
		/>
	</div>

	<div class="container">
		{
			relatedPosts?.length ? (
				<aside class="related-posts">
					<>
						<h2>You might like to read one of these posts next:</h2>
						{relatedPostsArray.map(({ datePublished, postTitle, seoMetaDescription }, index) => (
							<article aria-posinset={index + 1} aria-setsize={relatedPosts.length}>
								<BlogPostSummary {datePublished} {postTitle} {seoMetaDescription} {slug} />
							</article>
						))}
					</>
				</aside>
			) : null
		}
		<Content />
	</div>
</BaseLayout>

<style>
	.container {
		max-width: var(--max-width-xl);
		margin: var(--spacing-0) auto;
	}

	.related-posts {
		margin-block: var(--spacing-16);
		padding-block: var(--spacing-4);
		padding-inline: var(--spacing-6);
		background-color: var(--color-theme-3);
		border-radius: var(--spacing-2);
	}
</style>
