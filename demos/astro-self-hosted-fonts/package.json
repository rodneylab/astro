{
	"name": "astro-self-hosted-fonts",
	"version": "0.0.1",
	"private": true,
	"license": "BSD-3-Clause",
	"description": "Astro self-hosted fonts workflow: optimise how you add self-hosted Google fonts to your Astro project, shaving up to 80% off your font files.",
	"scripts": {
		"dev": "astro dev",
		"start": "astro dev",
		"build": "pnpm astro telemetry disable && astro build && subfont -ir --root dist",
		"check": "astro check --fail-on-warnings",
		"lint:css": "stylelint \"src/**/*.{css,astro}\"",
		"preview": "astro preview",
		"format": "prettier --write -plugin=prettier-plugin-astro ."
	},
	"devDependencies": {
		"astro": "~2.10.1",
		"astro-icon": "^0.8.1",
		"autoprefixer": "^10.4.14",
		"postcss": "^8.4.27",
		"postcss-html": "^1.5.0",
		"prettier": "^3.0.1",
		"prettier-plugin-astro": "^0.11.0",
		"stylelint": "^15.10.2",
		"stylelint-config-recommended": "^13.0.0",
		"stylelint-config-standard": "^34.0.0",
		"subfont": "^7.1.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/astro/tree/main/demos/astro-self-hosted-fonts"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/astro/issues"
	}
}
