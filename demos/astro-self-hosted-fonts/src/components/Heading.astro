---
const { 'aria-label': ariaLabel, id, text } = Astro.props;

const href = `#${id}`;
---

<span {id} class="container">
	{text}
	<a aria-label={ariaLabel} href={href}
		><span class="anchor-link"
			><svg
				viewBox="0 0 20 20"
				class="astro-U4QOYRKZ"
				width="var(--font-size-5)"
				vertical-align="middle"
				><path
					fill="currentColor"
					fill-rule="evenodd"
					d="M12.586 4.586a2 2 0 1 1 2.828 2.828l-3 3a2 2 0 0 1-2.828 0 1 1 0 0 0-1.414 1.414 4 4 0 0 0 5.656 0l3-3a4 4 0 0 0-5.656-5.656l-1.5 1.5a1 1 0 1 0 1.414 1.414l1.5-1.5zm-5 5a2 2 0 0 1 2.828 0 1 1 0 1 0 1.414-1.414 4 4 0 0 0-5.656 0l-3 3a4 4 0 1 0 5.656 5.656l1.5-1.5a1 1 0 1 0-1.414-1.414l-1.5 1.5a2 2 0 1 1-2.828-2.828l3-3z"
					clip-rule="evenodd"></path></svg
			></span
		>
	</a>
</span>

<style lang="css">
	.anchor-link {
		visibility: hidden;
	}

	a {
		color: hsl(var(--colour-text-hue) var(--colour-text-saturation) var(--colour-text-luminance));
		text-decoration: none;
	}

	.container:focus .anchor-link,
	.container:hover .anchor-link {
		visibility: visible;
	}
</style>
